# ==================== APPLICATION ====================
APP_NAME=Genuka KPI Engine
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=dev-secret-key-change-in-production

# ==================== DATABASE ====================
# ⚠️ DOCKER: MySQL sur machine hôte Windows
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=genuka
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ==================== REDIS ====================
# ⚠️ DOCKER: Redis dans conteneur Docker
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==================== GEMINI AI ====================
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_TOKENS=300
GEMINI_TEMPERATURE=0.7

# ==================== WHATSAPP ====================
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ID=
WHATSAPP_API_VERSION=v21.0

# ==================== TELEGRAM ====================
TELEGRAM_BOT_TOKEN=

# ==================== CELERY ====================
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
CELERY_TIMEZONE=Africa/Douala

# ==================== FEATURES ====================
ENABLE_LLM_RECOMMENDATIONS=false
ENABLE_WHATSAPP_NOTIFICATIONS=false
ENABLE_TELEGRAM_NOTIFICATIONS=false
MAX_INSIGHTS_PER_REPORT=3

# ==================== BUSINESS LOGIC ====================
CHURN_INACTIVE_DAYS=45
STOCK_ALERT_ESTIMATED_LOST_SALES_PER_PRODUCT=5

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
